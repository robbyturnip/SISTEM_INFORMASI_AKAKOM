<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_ti"
        android:onClick="buttonClick"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_school"
        android:background="#DF0101" />

    <ImageButton
        android:id="@+id/btn_si"
        android:onClick="buttonClick"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_school"
        android:background="#088A08"
        android:layout_below="@+id/btn_ti"/>

    <ImageButton
        android:id="@+id/btn_tk"
        android:onClick="buttonClick"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_school"
        android:background="#5882FA"
        android:layout_below="@+id/btn_si"
        />

    <ImageButton
        android:id="@+id/btn_mi"
        android:onClick="buttonClick"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_school"
        android:background="#BDBDBD"
        android:layout_below="@+id/btn_tk"/>

    <ImageButton
        android:id="@+id/btn_ka"
        android:onClick="buttonClick"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_school"
        android:background="#2EFE2E"
        android:layout_below="@+id/btn_mi"/>

    <TextView
        android:text="Komputer Akuntansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/btn_ka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btn_ka"
        android:layout_alignStart="@+id/btn_ka" />

    <TextView
        android:text="Sistem Informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:layout_above="@+id/btn_tk"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Manajemen Informatika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:fontFamily="serif"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/btn_mi"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:text="Teknik Informatika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="serif"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:layout_above="@+id/btn_si"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Teknik Komputer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/btn_tk"
        android:layout_alignLeft="@+id/btn_tk"
        android:layout_alignStart="@+id/btn_tk" />
</RelativeLayout>
